<p id="notice"><%= notice %></p>

<h1>Boards</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Cname</th>
      <th>Uid</th>
      <th>Ply</th>
      <th>Texture</th>
      <th>Color</th>
      <th>Price</th>
      <th>Stock</th>
      <th>Note</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @boards.each do |board| %>
      <tr>
        <td><%= board.name %></td>
        <td><%= board.cname %></td>
        <td><%= board.uid %></td>
        <td><%= board.ply %></td>
        <td><%= board.texture %></td>
        <td><%= board.color %></td>
        <td><%= board.price %></td>
        <td><%= board.stock %></td>
        <td><%= board.note %></td>
        <td><%= link_to 'Show', board %></td>
        <td><%= link_to 'Edit', edit_board_path(board) %></td>
        <td><%= link_to 'Destroy', board, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

