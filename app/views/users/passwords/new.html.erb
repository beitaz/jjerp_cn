<div class="login-box">
  <div class="login-logo">
    <a href="<%= root_path %>">
      <b>生产管理系统</b>
    </a>
  </div>
  <div class="login-box-body">
    <p class="login-box-msg">找回密码</p>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'form-horizontal' }) do |f| %>
    <%= devise_error_messages! %>

    <div class="field form-group">
      <%= f.label :email, '邮箱', class: 'control-label col-xs-3' %>
      <div class="col-xs-9">
        <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: '请输入保密邮箱' %>
      </div>
    </div>

    <div class="field form-group">
      <div class="col-xs-8">
        <div class="links">
          <small>
            <%= link_to '登陆系统', new_user_session_path %>
            <%= link_to '注册账号', new_user_registration_path %>
          </small>
        </div>
      </div>
      <div class="col-xs-4">
        <%= f.submit "重置密码", class: 'btn btn-primary btn-block btn-flat' %>
      </div>
    </div>
    <% end %>
  </div>
</div>
