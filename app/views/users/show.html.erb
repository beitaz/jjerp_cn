<div class="box box-solid">
  <div class="box-header with-border">
    <h3 class="box-title">系统首页</h3>
  </div>

  <div class="box-body">
    <dl class="dl-horizontal">
      <dt>Avatar</dt>
      <dd><%= image_tag @user.avatar.url(:thumb) %></dd>
      <dt>UserName</dt>
      <dd><%= @user.username %></dd>
      <dt>Email</dt>
      <dd><%= @user.email %></dd>
      <dt>Phone</dt>
      <dd><%= @user.phone %></dd>
      <dt>Category</dt>
      <dd><%= @user.category %></dd>
    </dl>
  </div>
  <!--
  <div class="box-footer">
  </div>
  -->
</div>
