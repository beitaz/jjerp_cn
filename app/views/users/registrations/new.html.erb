<div class='register-box'>
  <div class="register-logo">
    <a href="<%= root_path %>">
      <b>生产管理系统</b>
    </a>
  </div>

  <div class='register-box-body'>
    <p class="login-box-msg">注册账号</p>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-horizontal'}) do |f| %>
    <%= devise_error_messages! %>

    <div class="field form-group">
      <%= f.label :email, '邮箱', class: 'control-label col-xs-3' %>
      <div class='col-xs-9'>
        <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: '请输入邮箱' %>
      </div>
    </div>

    <div class="field form-group">
      <%= f.label :password, '密码', class: 'control-label col-xs-3' %>
      <div class='col-xs-9'>
        <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: '请输入密码' %>
      </div>
    </div>

    <div class="field form-group">
      <%= f.label :password_confirmation, '重复密码', class: 'control-label col-xs-3' %>
      <div class='col-xs-9'>
        <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: '请再次输入密码' %>
      </div>
    </div>

    <div class="field form-group">
      <div class="col-xs-8">
        <div class="links">
          <small>已有账号？<%= link_to '登陆', new_user_session_path %></small>
        </div>
      </div>
      <div class="col-xs-4">
        <%= f.submit '注册', class: 'btn btn-primary btn-block btn-flat' %>
      </div>
    </div>
    <% end %>
  </div>
</div>