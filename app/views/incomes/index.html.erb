<div class="box box-solid">
  <div class="box-header">
    <h3 class="box-title">收入列表</h3>

    <div class="box-tools">
      <div class="input-group input-group-sm" style="width: 150px;">
        <input type="text" name="table_search" class="form-control pull-right" placeholder="Search">

        <div class="input-group-btn">
          <button type="submit" class="btn btn-default">
            <i class="fa fa-search"></i>
          </button>
        </div>
      </div>
    </div>
  </div>

  <div class="box-body table-responsive no-padding">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Origin</th>
          <th>Origin</th>
          <th>Target</th>
          <th>Amount</th>
          <th>Creator</th>
          <th>Note</th>
          <th>Deleted</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @incomes.each do |income| %>
          <tr>
            <td>
              <%= income.origin %>
            </td>
            <td>
              <%= income.origin_id %>
            </td>
            <td>
              <%= income.target %>
            </td>
            <td>
              <%= income.amount %>
            </td>
            <td>
              <%= income.creator %>
            </td>
            <td>
              <%= income.note %>
            </td>
            <td>
              <%= income.deleted %>
            </td>
            <td>
              <%= link_to 'Show', income %>
            </td>
            <td>
              <%= link_to 'Edit', edit_income_path(income) %>
            </td>
            <td>
              <%= link_to 'Destroy', income, method: :delete, data: { confirm: 'Are you sure?' } %>
            </td>
          </tr>
          <% end %>
      </tbody>
    </table>
  </div>
</div>

<%= link_to 'New Income', new_income_path %>