<%= simple_form_for(@craft) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :cname %>
    <%= f.input :uid %>
    <%= f.input :uom %>
    <%= f.input :price %>
    <%= f.input :desc %>
    <%= f.input :note %>
    <%= f.input :deleted %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
