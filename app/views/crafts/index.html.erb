<div class="box box-solid">
  <div class="box-header">
    <h3 class="box-title">工艺列表</h3>

    <div class="box-tools">
      <div class="input-group input-group-sm" style="width: 150px;">
        <input type="text" name="table_search" class="form-control pull-right" placeholder="Search">

        <div class="input-group-btn">
          <button type="submit" class="btn btn-default">
            <i class="fa fa-search"></i>
          </button>
        </div>
      </div>
    </div>
  </div>

  <div class="box-body table-responsive no-padding">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th>Cname</th>
          <th>Uid</th>
          <th>Uom</th>
          <th>Price</th>
          <th>Desc</th>
          <th>Note</th>
          <th>Deleted</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @crafts.each do |craft| %>
          <tr>
            <td>
              <%= craft.name %>
            </td>
            <td>
              <%= craft.cname %>
            </td>
            <td>
              <%= craft.uid %>
            </td>
            <td>
              <%= craft.uom %>
            </td>
            <td>
              <%= craft.price %>
            </td>
            <td>
              <%= craft.desc %>
            </td>
            <td>
              <%= craft.note %>
            </td>
            <td>
              <%= craft.deleted %>
            </td>
            <td>
              <%= link_to 'Show', craft %>
            </td>
            <td>
              <%= link_to 'Edit', edit_craft_path(craft) %>
            </td>
            <td>
              <%= link_to 'Destroy', craft, method: :delete, data: { confirm: 'Are you sure?' } %>
            </td>
          </tr>
          <% end %>
      </tbody>
    </table>

  </div>
</div>

<%= link_to 'New Craft', new_craft_path %>