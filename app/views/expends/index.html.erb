<div class="box box-solid">
  <div class="box-header">
    <h3 class="box-title">支出列表</h3>

    <div class="box-tools">
      <div class="input-group input-group-sm" style="width: 150px;">
        <input type="text" name="table_search" class="form-control pull-right" placeholder="Search">

        <div class="input-group-btn">
          <button type="submit" class="btn btn-default">
            <i class="fa fa-search"></i>
          </button>
        </div>
      </div>
    </div>
  </div>

  <div class="box-body table-responsive no-padding">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Reason</th>
          <th>Amount</th>
          <th>Creator</th>
          <th>Note</th>
          <th>Deleted</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @expends.each do |expend| %>
          <tr>
            <td>
              <%= expend.reason %>
            </td>
            <td>
              <%= expend.amount %>
            </td>
            <td>
              <%= expend.creator %>
            </td>
            <td>
              <%= expend.note %>
            </td>
            <td>
              <%= expend.deleted %>
            </td>
            <td>
              <%= link_to 'Show', expend %>
            </td>
            <td>
              <%= link_to 'Edit', edit_expend_path(expend) %>
            </td>
            <td>
              <%= link_to 'Destroy', expend, method: :delete, data: { confirm: 'Are you sure?' } %>
            </td>
          </tr>
          <% end %>
      </tbody>
    </table>

  </div>
</div>

<%= link_to 'New Expend', new_expend_path %>